<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundku">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="17dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Pengguna"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_below="@+id/order_user_name"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"/>



        <TextView
            android:id="@+id/order_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat, Kota"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_below="@+id/order_phone_number"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal, Waktu"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_below="@+id/order_address_city"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/order_date_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Survey"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_below="@+id/order_date_time"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>


        <Button
            android:id="@+id/show_all_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date_booking"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:text="Lihat Booking Survey"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            />


    </RelativeLayout>

</RelativeLayout>