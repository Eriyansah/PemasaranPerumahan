<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundku"
    tools:context=".BookingActivity">


    <RelativeLayout
        android:id="@+id/r111"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/txt_booking"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="Keterangan : "
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r112"
        android:layout_width="match_parent"
        android:layout_below="@id/r111"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">


        <TextView
            android:id="@+id/txt_booking1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Klik Pada ITEM Untuk Pilih Tindakan"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="italic|bold"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:text="SELAMAT, Proses Booking Survey Anda Telah Sukses, Tunggu Konfimasi Selanjutnya."
        android:visibility="gone" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/booking_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r112"
        android:layout_above="@id/next_process_btn"/>

    <Button
        android:id="@+id/next_process_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Next"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"/>



</RelativeLayout>