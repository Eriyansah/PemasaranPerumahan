<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundku"
    tools:context=".FinalBookingActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konfimasi Detail Booking Survey Anda"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold|italic"
        android:layout_margin="15dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/booking_name_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:hint="Nama Lengkap" />

    <EditText
        android:id="@+id/booking_phone_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_name_final"
        android:layout_marginTop="6dp"
        android:inputType="phone"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Nomor Telepon" />

    <EditText
        android:id="@+id/booking_address_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_phone_final"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:layout_marginRight="20dp"
        android:hint="Alamat Rumah" />

    <EditText
        android:id="@+id/booking_city_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_address_final"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:layout_marginRight="20dp"
        android:hint="Kota " />

    <EditText
        android:id="@+id/booking_date_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_city_final"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:inputType="date"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:layout_marginRight="20dp"
        android:hint="Tanggal Survey" />


    <Button
        android:id="@+id/btn_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/booking_date_final"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:text="Pilih Tanggal"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_date_final2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_date"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="16dp"/>


    <Button
        android:id="@+id/confirm_booking_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Konfirmasi"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>

</RelativeLayout>